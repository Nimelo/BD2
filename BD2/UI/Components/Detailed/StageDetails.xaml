<components:AbstractDetailsComponent x:Class="UI.Components.Detailed.StageDetails"
                                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                     xmlns:components="clr-namespace:UI.Components"
                                     xmlns:dictionaries="clr-namespace:Common.Dictionaries;assembly=Common"
                                     mc:Ignorable="d"
                                     d:DesignHeight="300"
                                     d:DesignWidth="300">
    <Grid>

        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal"
                        ToolTip="Name of stage.">
                <Label Content="Name"
                       Width="70"></Label>
                <TextBox IsEnabled="{Binding IsEnabled}"
                                Text="{Binding Stage.Name}"
                          Width="150"></TextBox>

            </StackPanel>
        </StackPanel>
    </Grid>

</components:AbstractDetailsComponent>

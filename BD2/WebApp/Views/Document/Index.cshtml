@model WebApp.CandidateWebServiceReference.Candidate

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Extension</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in @Model.Document)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Extension
                </td>
                <td>
                    @Common.Dictionaries.DocumentTypesDictionary.Dictionary[item.Type] 
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>

        }
    </tbody>
</table>
